<script>
(function(){
  const canvas=document.getElementById("game");
  const ctx=canvas.getContext("2d");
  const scoreEl=document.getElementById("score");
  const statusEl=document.getElementById("status");

  const grid=20; const cols=canvas.width/grid; const rows=canvas.height/grid;
  let snake=[{x:10,y:10}];
  let dir={x:1,y:0}; let nextDir={x:1,y:0};
  let food=null;
  let score=0;
  let interval=120;
  let timer=null;
  let running=false;

  function placeFood(){
    let x,y; let used=new Set(snake.map(s=>s.x+","+s.y));
    do{ x=Math.floor(Math.random()*cols); y=Math.floor(Math.random()*rows);}while(used.has(x+","+y));
    food={x,y};
  }

  function drawCell(x,y,color){
    ctx.fillStyle=color;
    ctx.fillRect(x*grid+2,y*grid+2,grid-4,grid-4);
  }

  function draw(){
    ctx.clearRect(0,0,canvas.width,canvas.height);
    if(food) drawCell(food.x,food.y,"#f43f5e");
    snake.forEach((s,i)=>drawCell(s.x,s.y,i===0?"#22c55e":"#166534"));
  }

  function step(){
    const head={x:snake[0].x+dir.x,y:snake[0].y+dir.y};
    head.x=(head.x+cols)%cols;
    head.y=(head.y+rows)%rows;

    if(snake.some(s=>s.x===head.x&&s.y===head.y)){
      statusEl.textContent="Game Over";
      clearInterval(timer); running=false; return;
    }

    snake.unshift(head);

    if(food && head.x===food.x && head.y===food.y){
      score++; scoreEl.textContent=score; placeFood();
    } else snake.pop();

    draw();
  }

  function start(){
    if(running) return;
    running=true; statusEl.textContent="Running";
    placeFood();
    timer=setInterval(step,interval);
  }

  window.addEventListener("keydown",e=>{
    const k=e.key;
    if(k==="ArrowUp"||k==="w") nextDir={x:0,y:-1};
    if(k==="ArrowDown"||k==="s") nextDir={x:0,y:1};
    if(k==="ArrowLeft"||k==="a") nextDir={x:-1,y:0};
    if(k==="ArrowRight"||k==="d") nextDir={x:1,y:0};
    dir=nextDir;
    if(!running) start();
  });

})();
</script>

  
